---
    const response = await fetch('http://api.made7-g6.webe.radio/api/voci-del-menu?populate=*')
    const data = await response.json();
    //console.log("http://api.made7-g6.webe.radio"+data.data[0].attributes.cover.data.attributes.url)
---
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/icona.png">
    <title>Menù</title>
</head>
<body>

    <header>
        <h1>Menù</h1>
    </header>

    {
        await data.data.map(all=>
            <h1>{all.attributes.nome}</h1>
            <img src={"http://api.made7-g6.webe.radio"+all.attributes.cover.data.attributes.url}>
            <hr>
        
        )
    }
</body>

<style>
body{
    font-family: 'Roboto', sans-serif;
    background-color: #B48C59;
    text-shadow: 0px 2px 10px white, 0px 0px 3px black;
    color: rgb(176, 47, 52);
    margin: 0;
    height: 100vh;
}
header{
    background: url('/header.png');
    background-position: center;
    background-repeat: no-repeat;
    height: 150px;
    background-size: cover;
    padding-top: 10px;
}
header h1{
    font-size: 3rem;
    text-align: center;
}
</style>